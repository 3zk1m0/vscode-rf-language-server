{
  "name": "rf-intellisense",
  "description": "Robot Framework Intellisense",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:robot"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
        "id": "robot",
        "extensions": [".robot"],
        "aliases": ["robotframework", "RobotFramework"]
    }],
    "commands": [
        {
            "command": "rfIntellisense.rebuildSources",
            "title": "RF Intellisense - Reindex robot files in the workspace"
        }
    ],
    "configuration": {
      "type": "object",
      "title": "Robot Framework language server configuration",
      "properties": {
        "rfLanguageServer.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "rfLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the rfLanguageServer service."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "tslint": "~4.4.2",
    "typescript": "2.1.6",
    "vscode": "1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "~3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tomi/vscode-rf-language-server.git"
  },
  "keywords": [
    "RF",
    "RobotFramework",
    "Intellisense"
  ],
  "author": "Tomi Turtiainen",
  "bugs": {
    "url": "https://github.com/tomi/vscode-rf-language-server/issues"
  },
  "homepage": "https://github.com/tomi/vscode-rf-language-server#readme"
}
