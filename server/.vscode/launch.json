{
	"version": "0.1.0",
	// List of configurations. Add new configurations or edit existing ones.
	"configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Unit Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
			"outDir": "${workspaceRoot}/../client/server",
      "args": [
        "../client/server/parser/**/*.test.js"
      ]
    },
    {
      "type": "node2",
      "request": "launch",
      "name": "Run Test Script",
      "program": "${workspaceRoot}/../client/server/test.js",
      "sourceMaps": true,
			"outDir": "${workspaceRoot}/../client/server",
      "cwd": "${workspaceRoot}/../client/server"
    },
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 6009,
			"sourceMaps": true,
      "outFiles": [ "${workspaceRoot}/../client/server/**/*.js" ]
		}
	]
}
