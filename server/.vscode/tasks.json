{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "silent",
  "suppressTaskName": true,
	"problemMatcher": "$tsc-watch",
  "tasks": [
    {
      "taskName": "watch",
    	"args": ["run", "watch"]
    },
    {
      "taskName": "build",
      "args": ["run", "compile"],
      "isBuildCommand": true
    },
    {
      "taskName": "test",
      "args": ["test"],
      "isTestCommand": true
    },
    {
      "taskName": "build-tests",
      "args": ["run", "build-tests"]
    },
    {
      "taskName": "lint",
      "args": ["run", "lint"]
    }
  ]
}
